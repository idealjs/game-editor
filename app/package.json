{
  "name": "@idealjs/game-editor-app",
  "version": "1.0.2",
  "private": true,
  "main": "src-electron/dist/index.js",
  "dependencies": {
    "@craco/craco": "^6.4.3",
    "@idealjs/game-editor": "^1.0.2",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^14.0.4",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-scripts": "^5.0.0",
    "ts-loader": "^8.3.0",
    "typescript": "^4.6.3",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "concurrently": "^7.1.0",
    "electron": "18.0.4",
    "electron-builder": "^23.0.3",
    "electronmon": "^2.0.2",
    "wait-on": "^6.0.1"
  },
  "scripts": {
    "start": "ELECTRON_START_URL=http://localhost:3000 concurrently \"yarn react:serve\" \"yarn electron:watch\" \"yarn electron:wait\"",
    "build:win": "DEBUG=electron-builder electron-builder --win --x64",
    "electron:build": "tsc -p src-electron/tsconfig.json",
    "electron:watch": "yarn electron:build -w",
    "electron:start": "electronmon .",
    "electron:wait": "wait-on http://localhost:3000 && yarn electron:start",
    "react:start": "craco start",
    "react:serve": "BROWSER=none yarn react:start",
    "react:build": "craco build",
    "react:test": "craco test",
    "react:eject": "craco eject"
  },
  "build": {
    "appId": "com.idealjs.game-editor",
    "productName": "game editor",
    "extends": null,
    "files": [
      "build/**/*",
      "src-electron/**/*.js",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
